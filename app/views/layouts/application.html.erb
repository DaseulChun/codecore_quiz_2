<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>

    <div class="d-flex flex-row justify-content-between bg-light">
      <h5 class="text-primary my-auto mx-3">Idea Factory</h5>
      <ul class="nav mx-3">
        <li class="nav-item">
          <%= link_to 'Home', ideas_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Idea', new_idea_path, class:"nav-link" %> 
        </li>
  
   
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
