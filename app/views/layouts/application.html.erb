<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>

    <div class="d-flex flex-row justify-content-between bg-light">
        <%= image_tag "idea_icon.png", alt: "idea icon image", class:"brand-logo"%>
        <h5 class="text-primary my-auto mx-3">Idea Factory</h5>
        
        <ul class="nav mx-3">
          <li class="nav-item my-auto">
            <%= link_to 'Home', ideas_path, class:"nav-link" %>
          </li>
          <li class="nav-item my-auto">
            <%= link_to 'New Idea', new_idea_path, class:"nav-link" %> 
          </li>
    
          <% if user_signed_in? %>
            <li class="nav-item greeting my-auto">
              Hello, <%= current_user.full_name %>ðŸ˜ƒ
            </li>
            <li class="nav-item my-auto">
              <%= link_to 'Sign Out', sessions_path, method: :delete,  data: {confirm: "Are you sure you want to log out?"},  class:"nav-link" %> 
            </li>
          <% else %>
            <li class="nav-item my-auto">
              <%= link_to "Sign In", new_session_path, class:"nav-link" %>
            </li>
            <li class="nav-item my-auto">  
              <%= link_to "Sign Up", new_user_path, class:"nav-link" %>
            </li>
          <% end %>
        </ul>
      
    </div>
    <%= yield %>
  </body>
</html>
