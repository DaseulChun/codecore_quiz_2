<div class="mx-3 my-3">
  <div>
    <h1><%= @idea.title %></h1>
    <p><%= @idea.description %></p>
    <small>Posted <%= time_ago_in_words(@idea.created_at) %> ago</small>
  </div>

  <div class="my-3">
      <%= link_to "Edit", edit_idea_path(@idea), class:"btn btn-outline-primary" %>
      <%= link_to "Delete", idea_path(@idea), method: :delete, data: {confirm: "Are you srue?"}, class:"btn btn-outline-primary" %>
  </div>

</div>



